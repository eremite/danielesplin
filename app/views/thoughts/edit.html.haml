- title 'Edit Thought'

.btn-group.pull-right
  = link_to @thought, method: :delete, class: 'btn btn-danger', confirm: 'Are you sure?' do
    %i.icon-trash
    Delete

= form_for @thought do |f|
  %p.text-error
    = f.object.errors.full_messages.to_sentence
  .control-group
    = f.label :user_id, class: 'control-label'
    .controls
      = f.select :user_id, User.all.map { |u| [u.name, u.id] }
  .control-group
    = f.label :on, class: 'control-label'
    .controls
      = f.date_select :on, order: [:month, :day, :year], start_year: Date.today.year, end_year: Date.today.year + 1
  .control-group
    = f.label :body
    .controls
      = f.text_area :body, rows: 5
  .form-actions
    = f.submit 'Save', class: 'btn btn-primary'
    = link_to 'Cancel', thoughts_path, class: 'btn'
