- title 'Journal'

%p.pull-right
  %br
  = link_to new_entry_path, class: 'btn btn-success' do
    %i.icon-white.icon-plus
    New Entry

= render 'date_pagination'

.clearfix
  - if @grouped_entries.empty?
    %p Nothing yet.
  - else
    - @grouped_entries.each do |day, entries|
      - entries.each do |entry|
        = div_for entry do
          .btn-group.pull-right
            = link_to [:edit, entry], class: 'btn btn-small' do
              %i.icon-edit
              Edit
            = link_to entry, class: 'btn btn-small', method: :delete, confirm: 'Are you sure you want to delete this entry?' do
              %i.icon-trash
              Delete
          %h3=l entry.at, format: :long
          .body
            - if current_baby && entry.try(:existing_baby_body).present?
              .baby.pull-right.well
                :markdown
                  #{entry.existing_baby_body}
            :markdown
              #{entry.body}
