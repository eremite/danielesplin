= div_for @entry, class: 'hero-unit' do
  - if can? :update, @entry
    .btn-group.pull-right
      = link_to [:edit, @entry], class: 'btn btn-small' do
        %i.fa.fa-edit
        Edit
      = link_to @entry, class: 'btn btn-small', method: :delete, data: { confirm: 'Are you sure you want to delete this entry?' } do
        %i.fa.fa-trash-o
        Delete
  %h2.clearfix= date_with_significant_time(@entry.at)
  .body
    :markdown
      #{@entry.body}
