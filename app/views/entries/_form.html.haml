= form_for @entry, class: 'form-horizontal', html: { data: { persist: 'garlic' } } do |f|
  .control-group.pull-right.span8.baby
    = f.label :baby_body, class: 'control-label'
    .controls
      = f.text_area :baby_body, rows: 3, class: 'span8'
  .control-group
    = f.label :at, class: 'control-label'
    .controls
      = text_field_tag :at, l(f.object.at), class: 'datetimepicker'
      = f.hidden_field :at, value: l(f.object.at, format: :db), class: 'datetimepicker-hidden'
  .control-group
    = f.label :body, class: 'control-label autofocus'
    .controls
      = f.text_area :body, rows: 15, class: 'span12'
  .form-actions
    %button.btn.btn-primary{ type: 'submit'} Save
    = link_to 'Cancel', entries_path, class: 'btn'
