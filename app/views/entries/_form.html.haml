= form_for @entry, class: 'form-horizontal' do |f|
  .control-group
    = f.label :body, class: 'control-label'
    .controls
      = f.text_area :body, :rows => 3
  .control-group
    .controls
      = f.label :public, class: 'checkbox' do
        = f.check_box :public
        Public
  %button.btn{ type: 'submit'} Save
