= form_for @entry, class: 'form-horizontal' do |f|
  .control-group
    = f.label :at, class: 'control-label'
    .controls
      = text_field_tag :at, l(f.object.at), class: 'datetimepicker'
      = f.hidden_field :at, value: l(f.object.at, format: :db), class: 'datetimepicker-hidden'
  .control-group
    = f.label :body, class: 'control-label'
    .controls
      = f.text_area :body, rows: 20
  .control-group
    .controls
      = f.label :public, class: 'checkbox' do
        = f.check_box :public
        Public
  %button.btn{ type: 'submit'} Save
