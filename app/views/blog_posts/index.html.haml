- title 'Blog'

- if can? :create, :blog_post
  %p.pull-right
    %br
    = link_to new_blog_post_path, class: 'btn btn-success' do
      %i.icon-white.icon-plus
      New Blog Post

- if @entries.empty?
  .row.clearfix
    %p Nothing to show. We're not that interesting.
- else
  - @entries.each do |entry|
    = div_for entry, class: 'hero-unit' do
      - if can? :update, entry
        .btn-group.pull-right
          = link_to [:edit, entry], class: 'btn btn-small' do
            %i.icon-edit
            Edit
          = link_to entry, class: 'btn btn-small', method: :delete, confirm: 'Are you sure you want to delete this entry?' do
            %i.icon-trash
            Delete
      %h2.clearfix=l entry.at.to_date, format: :long
      .body
        :markdown
          #{entry.body}
        - if entry.photos.present?
          %ul.thumbnails
            - entry.photos.at_asc.each do |photo|
              - if photo.image?
                = render photo, :group =>  "group-#{entry.at.to_date}"

= paginate @entries
