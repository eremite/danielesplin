- title "Edit #{@inventory_item.name}"

- content_for :sidebar do

  - if can? :delete, @inventory_item
    = link_to @inventory_item, class: 'btn btn-danger btn-block', method: :delete, data: { confirm: "Are you sure you want to delete this #{InventoryItem.model_name.human}?" } do
      %i.fa.fa-trash-o.fa-inverse
      Delete

= render 'form'

- if @inventory_item.photos.any?
  .row
    .col-md-12.photo-container
      = render @inventory_item.photos
