- title 'Photos'

- content_for :sidebar do

  - if can? :create, Photo

    = link_to [:new, :photo], class: 'btn btn-success btn-block' do
      %i.fa.fa-inverse.fa-plus
      New Photo

  %hr

  - if Photo.photo_tag_counts.present?
    .panel.panel-default
      .panel-heading
        %h3.panel-title Tags
      .panel-body
        - tag_cloud(Photo.tag_counts_on(:photo_tags).order(:name), %w(1 2 3 4)) do |tag, frequency|
          = link_to tag.name, photos_path(tag: tag.name), style: "font-size: #{frequency.to_i * 0.5}em"

.row
  .col-md-12
    = render @photos

.row
  .col-md-12
    = paginate @photos
