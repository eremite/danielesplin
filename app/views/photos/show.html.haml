%h1=l @photo.at, format: :long

- if can? :update, Photo
  .btn-group.pull-right
    = link_to [:edit, @photo], class: 'btn btn-small' do
      %i.icon-edit
      Edit
    = link_to @photo, class: 'btn btn-small', method: :delete, confirm: 'Are you sure you want to delete this photo?' do
      %i.icon-trash
      Delete

.pull-left
  = link_to @photo.image.url, title: l(@photo.at) do
    = image_tag @photo.image.medium.url, class: 'img-rounded' if @photo.image.present?

.pull-left{style: 'padding-left: 1em'}
  :markdown
    #{@photo.description}
