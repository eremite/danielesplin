- if photo.image.representable?
  .col-auto{ style: 'width: 200px' }
    .card.h-100
      = image_tag photo.image.variant(resize_to_limit: [200, 200]), class: "card-img-top"
      .card-body
        %p.card-text= photo.description
      .card-footer.d-flex.justify-content-evenly
        = link_to 'Edit', [:edit, photo], class: 'btn btn-sm btn-outline-success'
        = link_to 'Delete', photo, method: :delete, class: 'btn btn-sm btn-outline-danger'
