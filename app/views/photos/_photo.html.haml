- if photo.image?
  - classes = []
  - classes << 'unblogged' if photo.posts.count.zero?
  - classes << (local_assigns[:center].present? ? 'center-block' : 'pull-left')
  .btn-hover.thumbnail{ class: classes }
    - if can? :update, photo
      = link_to [:edit, photo], class: 'btn btn-success btn-small', title: 'Edit Photo' do
        %i.fa.fa-edit
    - group = 'group' if local_assigns[:group].nil?
    = link_to photo.image.url, class: 'fancybox', rel: group, title: photo.description do
      = image_tag photo.resize_url(:small), class: 'img-rounded img-responsive', alt: photo.description.to_s
