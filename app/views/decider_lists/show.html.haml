%h1= @list.name

- content_for :sidebar do
  = link_to [:edit, @list], class: 'btn btn-info btn-block' do
    %i.fa.fa-edit.fa-inverse
      Edit List
  = link_to [:new, @list, :decider_list_item], class: 'btn btn-success btn-block' do
    %i.fa.fa-inverse.fa-plus
    Add to List
  = link_to @list, class: 'btn btn-danger btn-block', method: :delete, data: { confirm: 'Are you sure you want to delete this list?' } do
    %i.fa.fa-trash-o.fa-inverse
    Delete

- if @list.items.empty?
  %p.text-muted This list is empty.

.list-group
  - @list.items.order(%i[picked_at name]).each do |item|
    .list-group-item
      %span.text-muted= l item.picked_at
      = item.name
      = link_to "Delete", item, class: 'btn btn-default btn-xs pull-right', method: :delete
