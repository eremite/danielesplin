.card.shadow-sm.mb-3
  .card-header.d-flex.justify-content-between.align-items-center
    %strong= comment.user&.name
    %small.text-muted= l(comment.created_at)

  .card-body
    %p.card-text= comment.body

    - if Current.user == comment.user
      .mt-3.pt-2.border-top.d-flex.gap-2
        = link_to 'Edit', [:edit, comment], class: 'btn btn-sm btn-outline-info'
        = button_to 'Delete', comment, method: :delete, class: 'btn btn-sm btn-outline-danger', data: { confirm: 'Are you sure?' }
