%blockquote
  %span.pull-right.muted=l comment.created_at
  .btn-group.pull-right
    - if can? :edit, comment
      = link_to [:edit, comment], class: 'btn btn-mini', title: 'Edit' do
        %i.icon-edit
    - if can? :destroy, comment
      = link_to comment, class: 'btn btn-mini', title: 'Delete', method: :delete, confirm: 'Are you sure you want to delete this comment?' do
        %i.icon-trash
  = comment.body
  %small= comment.user.try(:name)
