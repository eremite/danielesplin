%blockquote
  %span.pull-right.muted=l comment.created_at
  .btn-group.pull-right
    - if can? :edit, comment
      = link_to [:edit, comment], class: 'btn btn-mini', title: 'Edit' do
        %i.fa.fa-edit
    - if can? :destroy, comment
      = link_to comment, class: 'btn btn-mini', title: 'Delete', method: :delete, data: { confirm: 'Are you sure you want to delete this comment?' } do
        %i.fa.fa-trash-o
  = comment.body
  %small= comment.user.try(:name)
