= form_for @baby_log, class: 'form-horizontal' do |f|
  %p.text-error
    = f.object.errors.full_messages.to_sentence
  .control-group
    = f.label :at, class: 'control-label'
    .controls
      = text_field_tag :at, l(f.object.at), class: 'datetimepicker'
      = f.hidden_field :at, value: l(f.object.at, format: :db), class: 'datetimepicker-hidden'
  .control-group
    = f.label :kind, class: 'control-label'
    .controls
      = f.select :kind, BabyLog::KINDS.map { |k| [k.titleize, k] }
  .control-group
    = f.label :notes, class: 'control-label'
    .controls
      = f.text_area :notes, rows: 3
  .form-actions
    %button.btn.btn-primary{ type: 'submit'} Save
    = link_to 'Cancel', baby_logs_path, class: 'btn'
