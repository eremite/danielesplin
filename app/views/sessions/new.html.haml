- title 'Login'

.row
  .col-md-4.col-md-offset-4
    %h1 Login
    %hr
    = form_tag sessions_path do
      .form-group
        = label_tag :email, 'Email Address', class: 'control-label'
        = email_field_tag :email, params[:email], class: 'autofocus form-control'
      .form-group
        = label_tag :password, nil, class: 'control-label'
        = password_field_tag :password, nil, class: 'form-control'
      .form-group
        = submit_tag 'Log in', class: 'btn btn-primary btn-block'
