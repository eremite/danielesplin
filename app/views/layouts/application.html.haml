!!!
%html

  %head
    %title Untitled
    %meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)

  %body{ id: "#{controller.controller_name}-controller" }

    %header.header
      - if logged_in?
        .navbar.navbar-static-top
          .navbar-inner
            .container
              %ul.nav
                %li{class: controller.controller_name == 'entries' && 'active'}
                  = link_to entries_path do
                    %i.icon-pencil
                    Entries
                %li{class: controller.controller_name == 'photos' && 'active'}
                  = link_to photos_path do
                    %i.icon-camera
                    Photos
              %ul.nav.pull-right
                %li= link_to 'Logout', logout_path

    .content.container
      - unless logged_in?
        = link_to 'Login', login_path, class: 'pull-right'
      = render 'layouts/flash_hash'
      = yield

    %footer.footer
      .container
        %p &copy; #{Time.zone.now.year} Daniel &amp; Erika Esplin
