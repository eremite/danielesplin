!!!
%html

  %head
    %title
      - if content_for? :title
        D&amp;E - #{yield(:title)}
      - else
        Daniel &amp; Erika
    %meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)

  %body{ id: "#{controller.controller_name.dasherize}-controller" }

    %header.header
      - if logged_in?
        .navbar.navbar-static-top
          .navbar-inner
            .container
              %ul.nav
                - if can? :create, Entry
                  %li{class: controller.controller_name == 'entries' && 'active'}
                    = link_to entries_path do
                      %i.icon-book
                      Journal
                - if can? :index, :blog_post
                  %li{class: controller.controller_name == 'blog_posts' && 'active'}
                    = link_to blog_posts_path do
                      %i.icon-picture
                      Blog
                - if can? :manage, Photo
                  %li{class: %w(photos upload_batches).include?(controller.controller_name) && 'active'}
                    = link_to photos_path do
                      %i.icon-camera
                      Photos
                - if can? :index, :report
                  %li.dropdown{class: controller.controller_name == 'reports' && 'active'}
                    = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                      %i.icon-list
                      Reports
                      %b.caret
                    %ul.dropdown-menu
                      %li= link_to 'Statistics', statistics_report_path
                      %li= link_to 'Users', users_report_path
                      %li= link_to 'Untimed Photos', untimed_photos_report_path
                      %li= link_to 'Unblogged Photos', unblogged_photos_report_path
              %ul.nav.pull-right
                %li.divider-vertical
                %li.dropdown
                  = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'Edit Profile', [:edit, current_user]
                    %li.divider
                    %li
                      = link_to 'Log Out', logout_path

    .content.container
      - unless logged_in?
        = link_to 'Login', login_path, class: 'pull-right'
      - if @show_title && content_for?(:title)
        .page-header
          %h1 #{yield(:title)}
      = render 'layouts/flash_hash'
      = yield

    %footer.footer
      .container
        %p &copy; #{Time.zone.now.year} Daniel &amp; Erika Esplin
