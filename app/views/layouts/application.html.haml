!!!
%html

  %head
    %title
      - if content_for? :title
        D&amp;E - #{yield(:title)}
      - else
        Daniel &amp; Erika
    %meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)

  %body{ id: "#{controller.controller_name.dasherize}-controller" }

    %header.header
      - if current_user
        = render 'layouts/nav'

    .content.container
      - unless logged_in?
        = link_to 'Login', login_path, class: 'pull-right'
      - if @show_title && content_for?(:title)
        .page-header
          %h1 #{yield(:title)}
      = render 'layouts/flash_hash'
      = yield

    %footer.footer
      .container
        %p &copy; #{Time.zone.now.year} Daniel &amp; Erika Esplin
