!!!
%html

  %head
    %title Untitled
    %meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)

  %body{ id: "#{controller.controller_name}-controller" }

    %header.header
      .container
        = link_to 'Entries', entries_path
        .pull-right
          - if logged_in?
            = link_to 'Logout', logout_path
          - else
            = link_to 'Login', login_path

    .content.container
      = render 'layouts/flash_hash'
      = yield

    %footer.footer
      .container
        %p &copy; #{Time.zone.now.year} Daniel &amp; Erika Esplin
