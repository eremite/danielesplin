!!!
%html

  %head
    %title Untitled
    %meta{'http-equiv' => 'Content-Type', content: 'text/html; charset=utf-8'}
    = stylesheet_link_tag :application
    = javascript_include_tag :application
    = csrf_meta_tag
    = yield(:head)

  %body{ id: "#{controller.controller_name.dasherize}-controller" }

    %header.header
      - if logged_in?
        .navbar.navbar-static-top
          .navbar-inner
            .container
              %ul.nav
                - if can? :create, Entry
                  %li{class: controller.controller_name == 'entries' && 'active'}
                    = link_to entries_path do
                      %i.icon-book
                      Journal
                - if can? :index, :blog_post
                  %li{class: controller.controller_name == 'blog_posts' && 'active'}
                    = link_to blog_posts_path do
                      %i.icon-picture
                      Blog
                - if can? :manage, Photo
                  %li{class: controller.controller_name == 'photos' && 'active'}
                    = link_to photos_path do
                      %i.icon-camera
                      Photos
              %ul.nav.pull-right
                %li.divider-vertical
                %li.dropdown
                  = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
                    = current_user.name
                    %b.caret
                  %ul.dropdown-menu
                    %li
                      = link_to 'Edit Profile', [:edit, current_user]
                    %li.divider
                    %li
                      = link_to 'Log Out', logout_path

    .content.container
      - unless logged_in?
        = link_to 'Login', login_path, class: 'pull-right'
      = render 'layouts/flash_hash'
      = yield

    %footer.footer
      .container
        %p &copy; #{Time.zone.now.year} Daniel &amp; Erika Esplin
