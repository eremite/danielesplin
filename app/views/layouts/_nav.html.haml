.navbar.navbar-static-top
  .navbar-inner
    .container

      %ul.nav
        - if can? :create, Entry
          %li{class: controller.controller_name == 'entries' && 'active'}
            = link_to entries_path do
              %i.icon-book
              Journal
        - if can? :index, :blog_post
          %li{class: controller.controller_name == 'blog_posts' && 'active'}
            = link_to blog_posts_path do
              %i.icon-picture
              Blog
        - if can? :manage, Photo
          %li{class: %w(photos upload_batches).include?(controller.controller_name) && 'active'}
            = link_to photos_path do
              %i.icon-camera
              Photos
        - if can? :index, :report
          %li.dropdown{class: controller.controller_name == 'reports' && 'active'}
            = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
              %i.icon-list
              Reports
              %b.caret
            %ul.dropdown-menu
              %li= link_to 'Statistics', statistics_report_path
              %li= link_to 'Users', users_path
              %li= link_to 'Untimed Photos', untimed_photos_report_path
              %li= link_to 'Unblogged Photos', unblogged_photos_report_path
              %li= link_to 'Comments', comments_path
              - if can? :create, Thought
                %li= link_to 'Thoughts', thoughts_path

      %ul.nav.pull-right
        %li.divider-vertical
        %li.dropdown
          = link_to '#', class: 'dropdown-toggle', data: { toggle: 'dropdown' } do
            = current_user.name
            %b.caret
          %ul.dropdown-menu
            %li
              = link_to 'Edit Profile', [:edit, current_user]
            %li.divider
            %li
              = link_to 'Log Out', logout_path

      = form_tag searches_path, method: :get, class: 'navbar-search pull-right' do
        = text_field_tag :term, params[:term], class: 'search-query span2', :placeholder => 'Search'
