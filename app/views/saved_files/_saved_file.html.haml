%li.mb-3
  - if saved_file.attachment.attached?
    = link_to saved_file.attachment.filename, saved_file.attachment
  .text-muted= saved_file.description
  = link_to "edit", [:edit, saved_file], class: "btn btn-outline-info btn-sm"
  - confirm = { confirm: 'Are you sure you want to delete this file?' }
  = link_to "delete", saved_file, method: :delete, class: "btn btn-outline-danger btn-sm", data: confirm
