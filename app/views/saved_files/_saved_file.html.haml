%li.mb-3
  - if saved_file.attachment
    = link_to saved_file.attachment.filename, saved_file.attachment
  .text-muted= saved_file.description
  = link_to "edit", [:edit, saved_file], class: "btn btn-outline-info btn-sm"
  = link_to saved_file, method: :delete, class: "btn btn-outline-danger btn-sm", data: { confirm: 'Are you sure you want to delete this file?' } do
    delete
