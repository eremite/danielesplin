= form_for @post, class: 'form-horizontal' do |f|
  .control-group
    = f.label :at, class: 'control-label'
    .controls
      = text_field_tag :at, l(f.object.at), class: 'datetimepicker', tabindex: 1
      = f.hidden_field :at, value: l(f.object.at, format: :db), class: 'datetimepicker-hidden'
  .control-group
    = f.label :body, class: 'control-label autofocus'
    .controls
      = f.text_area :body, rows: 10, tabindex: 2
    %span.help-block.pull-right
      = link_to 'Formatting options', 'https://github.com/adam-p/markdown-here/wiki/Markdown-Cheatsheet', target: :blank
  .control-group
    = f.label :post_tag_list, class: 'control-label'
    .controls
      = f.text_field :post_tag_list
  .form-actions
    %button.btn.btn-primary{ type: 'submit', tabindex: 3} Save
    = link_to 'Cancel', :posts, class: 'btn', tabindex: 4
